# Backend Dockerfile
FROM python:3.11-slim

WORKDIR /app

COPY ticketbot_backend/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

COPY ticketbot_backend/ /app/

ENV PORT=8000
EXPOSE 8000

# Use gunicorn in production
CMD ["gunicorn", "-b", "0.0.0.0:8000", "ticket_bot:app"]
